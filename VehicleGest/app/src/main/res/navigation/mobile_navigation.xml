<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation">

    <fragment
        android:id="@+id/navigation_vehicles"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.vehicles.VehiclesFragment"
        android:label="@string/title_vehicles"
        tools:layout="@layout/fragment_vehicles" />

    <fragment
        android:id="@+id/navigation_itv"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.inspections.ITVFragment"
        android:label="@string/title_vehicles"
        tools:layout="@layout/fragment_vehicles" />

    <fragment
        android:id="@+id/navigation_services"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.services.ServicesFragment"
        android:label="@string/title_vehicles"
        tools:layout="@layout/fragment_vehicles" />

    <fragment
        android:id="@+id/navigation_employees"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.employees.EmployeesFragment"
        android:label="@string/title_vehicles"
        tools:layout="@layout/fragment_vehicles" >
        <action
            android:id="@+id/action_navigation_employees_to_navigation_vehicles"
            app:destination="@id/navigation_vehicles" />
    </fragment>
    <fragment
        android:id="@+id/navigation_inventory"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.inventory.InventoryFragment"
        android:label="@string/title_vehicles"
        tools:layout="@layout/fragment_vehicles" />

    <fragment
        android:id="@+id/navigation_alerts"
        android:name="es.ilerna.proyectodam.vehiclegest.ui.alerts.AlertsFragment"
        android:label="@string/title_alerts"
        tools:layout="@layout/fragment_alerts" />


</navigation>